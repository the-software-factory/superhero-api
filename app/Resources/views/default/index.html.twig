{% extends 'base.html.twig' %}

{% block body %}
        <div class="container">
                <div class="row">
                        <h1>The Greatest Superhero App</h1>
                </div>
                <div class="row">
                        <table class="table table-striped">
                                <thead>
                                <tr>
                                        <th>#</th>
                                        <th>Hero</th>
                                        <th>Real Name</th>
                                        <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {%for superhero in superheroes%}
                                        <tr>
                                                <td>{{superhero.id}}</td>
                                                <td>{{superhero.name}}</td>
                                                <td>{{superhero.realName}}</td>
                                                <td>
                                                        <a href="{{path('detail',{'id':superhero.id})}}"><span class="glyphicon glyphicon-eye-open"></span> </a>
                                                        <a href=""><span class="glyphicon glyphicon-pencil"></span> </a>
                                                        <a href=""><span class="glyphicon glyphicon-trash"></span> </a>

                                                </td>
                                        </tr>
                                {%endfor%}
                                </tbody>
                        </table>
                        <button type="button" class="btn btn-primary btn-md" href="{{path('create')}}">New Hero</button>
                </div>
        </div>

{% endblock %}

{% block stylesheets %}

{% endblock %}
