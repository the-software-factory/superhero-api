{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <h3 align="center">The Greatest Superhero App</h3><br><br>
            <div class="col-md-6">

                {% if is_granted('ROLE_ADMIN') %}
                Create a new superhero <a class="btn btn-success" href="{{ path('create') }}"><span class="glyphicon glyphicon-plus"></span></a>
                {% endif %}
                <br><br>
                <table class="table table-striped">
                    <th>Avatar</th>
                    <th>#</th>
                    <th>Hero</th>
                    <th>Real Name</th>
                    <th>Action</th>
                    {% for superhero in superheroes %}
                        <tr>
                            <td><img src="{{ superhero.avatar }}" class="img-circle" width="40px"></td>
                            <td>{{ superhero.id }}</td>
                            <td>{{ superhero.name }}</td>
                            <td>{{ superhero.realName }}</td>
                            <td><a href="{{ path('detail', {'id':superhero.id}) }}"><span
                                            class="glyphicon glyphicon-eye-open"></span></a>
                                {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('edit', {'id':superhero.id}) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                                <a href="{{ path('delete', {'id':superhero.id}) }}"><span class="glyphicon glyphicon-trash"></span></a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
            <div class="col-md-6">
                {% if is_granted('ROLE_ADMIN') %}
                    Create a new Team <a class="btn btn-success" href="{{ path('create_team') }}"><span class="glyphicon glyphicon-plus"></span></a>
                {% endif %}
                <br><br>
                <table class="table table-striped">
                    <th>#</th>
                    <th>Team</th>
                    <th>HQ</th>
                    <th>Action</th>
                    {% for team in teams %}
                        <tr>
                            <td>{{ team.id }}</td>
                            <td>{{ team.name }}</td>
                            <td>{{ team.hq }}</td>
                            <td><a href="{{ path('detail_team', {'id':team.id}) }}"><span
                                            class="glyphicon glyphicon-eye-open"></span></a>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('edit_team', {'id':team.id}) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                                    <a href="{{ path('delete_team', {'id':team.id}) }}"><span class="glyphicon glyphicon-trash"></span></a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}


{% block stylesheets %}
{% endblock %}
