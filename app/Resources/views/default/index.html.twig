{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="col-md-6">
        <h3>The Greatest Superhero App</h3>
        <div class="row">
            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-success" href="{{ path('create') }}">Create a new superhero</a>
            {% endif %}
        <table class="table table-striped">
            <th>#</th>
            <th>Avatar</th>
            <th>Hero</th>
            <th>Real Name</th>
            <th>Action</th>
            {% for superhero in superheroes %}
                <tr>
                    <td>{{ superhero.id }}</td>
                    <td><img src="{{ superhero.avatar }}" class="img-circle" alt="" height="40px" width="40px"></td>
                    <td>{{ superhero.name }}</td>
                    <td>{{ superhero.realName }}</td>
                    <td><a href="{{ path('detail', {'id':superhero.id}) }}"><span class="glyphicon glyphicon-eye-open"></span></a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('edit', {'id':superhero.id}) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                            <a href="{{ path('delete', {'id':superhero.id}) }}"><span class="glyphicon glyphicon-share-alt"></span></a>
                        {% endif %}
                    </td>

                </tr>
            {% endfor %}
        </table>
        </div>
    </div>
    </div>

    <div class="col-md-6">
        <h3>The Greatest Superhero App</h3>
        {% if is_granted('ROLE_ADMIN') %}
            Create a new Team <a class="btn btn-success" href="{{ path('create_team') }}"><span class="glyphicon glyphicon-plus"></span></a>
        {% endif %}
        <br><br>
        <table class="table table-striped">
            <th>#</th>
            <th>Team</th>
            <th>HQ</th>
            <th>Action</th>
            {% for team in teams %}
                <tr>
                    <td>{{ team.id }}</td>
                    <td>{{ team.name }}</td>
                    <td>{{ team.hq }}</td>
                    <td><a href=""><span
                                    class="glyphicon glyphicon-eye-open"></span></a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href=""><span class="glyphicon glyphicon-pencil"></span></a>
                            <a href=""><span class="glyphicon glyphicon-trash"></span></a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

    </div>
{% endblock %}


{% block stylesheets %}
{% endblock %}
